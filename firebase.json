{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "package.json",
      "package-lock.json",
      "**/.git/**",
      "**/.*",
      "**/.sass-cache/**",
      "**/*.scss",
      "**/vendor/*/**/*.css*",
      "**/node_modules/**",
      "**/planning/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
